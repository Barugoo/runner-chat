{
    "$id": "https://schemas.trait.app/refs/message_properties.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A representation of chat message",
    "type": "object",
    "required": [
        "text",
        "message_type",
        "source_id",
        "target_id"
    ],
    "additionalProperties": false,
    "title": "MessageProperties",
    "properties": {
        "text": {
            "type": "string",
            "description": "The text to display in markdown"
        },
        "message_type": {
            "$ref": "./message_type.json"
        },
        "source_id": {
            "type": "string",
            "description": "primary key of the sender (could be group or athlete depending on message_type)",
            "format": "uuid"
        },
        "target_id": {
            "type": "string",
            "description": "primary key of the receiver (could be group or athlete depending on message_type)",
            "format": "uuid"
        }
    }
}