{
    "$id": "https://schemas.trait.app/chat_event.json",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/TopLevel",
    "definitions": {
        "TopLevel": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "action": {
                    "$ref": "./refs/event_action.json"
                },
                "chat_id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "primary key"
                },
                "direct_id": {
                    "type": "string",
                    "description": "athlete_id of chat interlocutor",
                    "format": "uuid"
                },
                "latest_message": {
                    "type": "object",
                    "description": "latest message in the chat on the moment of query",
                    "properties": {
                        "message_id": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "message_properties": {
                            "$ref": "refs/message_properties.json"
                        },
                        "message_timestamp": {
                            "type": "string",
                            "description": "should be used for chats sorting",
                            "format": "date-time"
                        }
                    }
                },
                "unread_messages_number": {
                    "type": "integer"
                },
                "revision": {
                    "type": "integer"
                }
            },
            "required": [
                "action",
                "chat_id"
            ],
            "title": "TopLevel"
        }
    }
}